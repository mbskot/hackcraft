{block #content}
<div class="article">
	<h2 class="title">{$article->title}</h2>
		<p class="meta">
			Autor: <a href="#">{$article->author->username}</a>&nbsp;&nbsp;&bull;&nbsp;&nbsp;{$article->published|date:'j.n.Y'}&nbsp;&nbsp;&bull;&nbsp;&nbsp;<a n:href="Article:default#comments, $article->slug" class="comments" n:snippet="commentsCount">Komentáre ({count($article->comments)})</a>
		</p>
	<div class="content">
		{!$article->content}
	</div>
	<div id="comments">
		{control comments}
	</div>
	<div class="toolsMenu">
		<a n:href="edit, $article->slug">Editovať</a> |
		<a n:href="delete!, $article->slug">Zmazať</a>
	</div>
</div>
{/block}